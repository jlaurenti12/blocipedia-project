<div class='header'>
  <h1> Wikis </h1>
  <%= link_to "Create a New Wiki", new_wiki_path, class: 'btn btn-success' %>
</div>

<div class="row">
  <% @wikis.each do |wiki| %>
   <% if current_user.role == "Standard" && wiki.private == true %>
   <% else %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <% if wiki.private == true %>
            <h3> <%= wiki.title %></h3><span class="private">[Private]</span>
          <% else %>
            <h3> <%= wiki.title %> </h3>
          <% end %>
          <section> <%= truncate(wiki.body, :length => 50) %> </section>
          <%= link_to "View Full Wiki", wiki %>
        </div>
      </div>
    </div>
   <% end %>
  <% end %>
</div>
